<h1>Favourites#index</h1>
<p>Find me in app/views/favourites/index.html.erb</p>


<div class="container">
  <% @favourites.each do |favourite| %>
  <div class="card">
    <%= favourite.car.brand %>
    <%= favourite.car.model %>
    <%= favourite.car.year %>
    <%= favourite.car.fuel %>
    <%= link_to "delete", favourite_path(favourite), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  </div>
  <% end %>
